<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1></h1>
    <p></p>
  </div>
</div>


<div class="container-fluid article-container" id="articleContainer">
  {{#each article}}
  <div class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer"
          href="{{this.link}}">{{this.title}}</a>
        <a class="btn btn-success save" data-title="{{this.title}}" data-link="{{this.link}}" data-summary="{{this.summary}}" id="saveButton">Save Article</a>
      </h3>
    </div>
    <p class="card-body">{{this.summary}}</p>
  </div>
  {{/each}}
</div>