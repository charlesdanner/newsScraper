<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Saved Articles</h1>
    <p>Your Saved Articles</p>
  </div>
</div>

<div id="noteModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true"
          style="margin-top: -10px;">Ã—</button>
        <div class="bootbox-body">
          <div class="container-fluid text-center">
            <h4 id='modalTitle'></h4>
            <hr>
            <ul id="noteList" class="list-group note-container">
              <li class="list-group-item">No notes for this article yet.</li>
            </ul>
            <textarea id="newNoteTextArea" placeholder="New Note" rows="4" cols="60"></textarea>
            <button id="saveNewNote" class="btn btn-success save">Save Note</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid article-container" id="articleContainer">
  {{#each article}}
  <div data-_id="{{this._id}}" class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.link}}">{{this.title}}</a>
        <a class="btn btn-danger delete" id="deleteButton" data-title="{{this.title}}">Delete Article</a>
        <a class="btn save" id="noteButton" data-title="{{this.title}}">Add Note</a>
      </h3>
    </div>
    <div class="card-body">{{this.summary}}</div>
  </div>
  {{/each}}
</div>