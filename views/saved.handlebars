<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Saved Articles</h1>
    <p>Your Saved Articles</p>
  </div>
</div>


<div class="container-fluid article-container">
  {{#each article}}
  <div data-_id="{{this._id}}" class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer"
          href="{{this.link}}">{{this.title}}</a>
        <a class="btn btn-danger delete" data-_id="{{this._id}}">Delete Article</a>
        <a class="btn btn-info notes" data-_id="{{this._id}}">Add Note</a>
      </h3>
    </div>
    <div class="card-body">{{this.summary}}</div>
  </div>
  {{/each}}
</div>